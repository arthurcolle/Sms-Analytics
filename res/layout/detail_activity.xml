<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.whitaker.textalyzer.MainActivity$PlaceholderFragment" >
	<RelativeLayout
	    android:id="@+id/relative_header"
		android:layout_width="match_parent"
		android:layout_height="320dp"
		android:background="#FF6600"
		android:layout_margin="20dp"
	>
		<TextView
		    android:id="@+id/score_header"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_alignParentTop="true"
		    android:padding="10dp"
		    android:textSize="30sp"
		    android:textColor="#FFFFFF"
		    android:text="Friend Score"
		/>
		
		<TextView
		    android:id="@+id/score_value"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerVertical="true"
		    android:layout_centerHorizontal="true"
		    android:padding="10dp"
		    android:textSize="120sp"
		    android:textColor="#FFFFFF"
		    android:text="96"
		/>
		
		<TextView
		    android:id="@+id/contact_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_alignParentBottom="true"
		    android:padding="10dp"
		    android:textSize="34sp"
		    android:textColor="#FFFFFF"
		/>
		
	</RelativeLayout>
	
	<View
	    android:id="@+id/break1"
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:layout_below="@id/relative_header"
	    android:background="#B2B2CC"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	/>
	
	<ListView
	    android:id="@+id/list_information"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/break1"
	    android:padding="10dp"
	/>

</RelativeLayout>
